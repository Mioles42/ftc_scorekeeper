<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#bacdff">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="3"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/goals_land_new_goal_set"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/flags"
            android:layout_gravity="bottom|center"
            android:onClick="toNewGoalSet" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/goals_land_view_goals"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/magnifying_glass"
            android:onClick="toViewGoals" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="New Goal"
            android:id="@+id/goals_land_new_goal_text"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="New Goal Set"
            android:id="@+id/goals_land_new_goal_set_text"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="View Goals"
            android:id="@+id/goals_land_view_goals_text"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/goals_land_new_goal"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/flag"
            android:layout_gravity="left"
            android:onClick="toNewGoal" />

    </GridLayout>

</RelativeLayout>