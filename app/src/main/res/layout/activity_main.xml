<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/pale_blue">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:columnCount="3"
        android:rowCount="6">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/main_portrait_logo"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/scorekeeper"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="FTC Scorekeeper\n(v1.02)"
            android:id="@+id/main_portrait_logo_text"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:layout_gravity="top|center_horizontal"
            android:layout_columnSpan="3" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/main_portrait_match"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/whistle"
            android:layout_gravity="left"
            android:layout_columnSpan="1"
            android:onClick="toMatches" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/main_portrait_goals"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/flag"
            android:layout_gravity="right"
            android:onClick="toGoals" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Start Match"
            android:id="@+id/main_portrait_match_text"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Goals"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"
            android:id="@+id/main_portrait_goals_text"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="right" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/main_portrait_records"
            android:layout_row="4"
            android:layout_column="0"
            android:src="@drawable/book"
            android:onClick="toRecords" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/main_portrait_about"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@drawable/question"
            android:layout_gravity="right"
            android:onClick="toAbout" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Records"
            android:id="@+id/main_portrait_records_text"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="About"
            android:id="@+id/main_portrait_about_text"
            android:layout_row="5"
            android:layout_column="2"
            android:textSize="10pt"
            android:textColor="@color/navy"
            android:textAlignment="center"/>

    </GridLayout>
</RelativeLayout>